{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",  
      "use": "@vercel/node"  
    },
    {
      "src": "dist/my-angular-app/**", 
      "use": "@vercel/static"          
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",  
      "dest": "/api/$1"    
    },
    {
      "src": "/(.*)",      
      "dest": "/index.html" 
    }
  ]
}